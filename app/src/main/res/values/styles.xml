<resources>

    <!-- Base application theme, ... -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppBaseTheme.ActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- ... -->
    </style>

    <style name="AppBaseTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/write</item>
        <item name="android:titleTextStyle">@style/AppBaseTheme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/AppBaseTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppBaseTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/write</item>
    </style>


</resources>